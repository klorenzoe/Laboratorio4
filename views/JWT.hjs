<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/css/bootstrap.css' />
    <script src="/js/bootstrap.js"></script>
  </head>
  <body>
      <div class="jumbotron text-center">
          <h1 class="display-3 pb-5">{{ name }}</h1>
          <button name="serie1" id="serie1" class="btn btn-outline-info btn-lg m-1" onclick="window.location.href='/JWT'">JWT</button>
          <button name="serie2" id="serie2" class="btn btn-outline-info btn-lg m-1" onclick="window.location.href='/PizzaCRUD'">Pizza</button>
          <button name="serie3" id="serie3" class="btn btn-outline-info btn-lg m-1" onclick="window.location.href='/PizzaDB'">Pizza & MongoDB</button>
      </div>
      <div class="form-group row">
          <div class="col-md-5" >
          <label class="m-1">Contrase√±a:</label>
          <input class="form-control" type="password" id="JSON_PASSWORD">
          <label class="m-1">Contenido:</label>
          <textarea class="form-control" id="JSON_CONTENT" rows="5" class="form-control"></textarea>
          <label class="m-1">Fecha de caducidad:</label>
          <input class="form-control" type="datetime-local" id="JSON_DATE">
          <button name="generar_JWT" id="btn_jwt" class="btn btn-success float-right  mt-2">Generar Token</button>
          </div>
          <div class="col-md-5" > 
          <label class="m-1">Token:</label>
          <textarea class="form-control" id="JWT_DATA" rows="15" class="form-control">{{value}}</textarea>
          </div>
      </div>
  </body>
</html>
